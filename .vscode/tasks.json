{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    
    "args": [],
    "tasks": [
        {
            "echoCommand": true,
            "taskName": "build",
            "args": [],

            // When set to 'true', Cmd-Shift-B will trigger this task.
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test-csharp",
            "isTestCommand": true

        }
    ],

    // By default, VS Code wants to launch from the root directory.
    // We need to specify `cwd` to build the main application.
    "options": {
        "cwd": "${workspaceRoot}/src/app"
    }
}