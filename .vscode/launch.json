/**
 * Configures the default launch targets. 
 *
 * Note that the .vscode directory is *not* typically included in source
 * control.  
 */
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core - Console",
            "type": "coreclr",
            
            // "launch" will launch the application.
            // "attach" will attach the debugger to an already running application.
            "request": "launch",
            "preLaunchTask": "build",
            
            // Notice that even the main console app is a .dll. Gone are the days of Windows .exe.
            "program": "${workspaceRoot}/src/app/bin/Debug/netcoreapp1.0/app.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "externalConsole": false
        }
        /*

        // These launch targets came out of the box. Keeping them around for posterity.

        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/bin/Debug/netcoreapp1.0/dotnet.dll",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "<example>"
        }
        */
    ]
}